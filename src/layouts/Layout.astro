import '../styles/global.css';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content="Pagina web de Matias Salinas para mostrar algunos de sus proyectos y fuertes en el desarrollo web.">
		<title>Portfolio</title>
	</head>
	<body>
		<main class="h-full overflow-y-auto bg-[linear-gradient(rgb(6,0,70)_0%,rgb(22,13,99)_60%,rgb(33,27,121)_100%)]">
			<slot />
		</main>
	</body>
</html>

<style>
	html {
		height: 100%;
		background: rgb(22,13,99);
		font-family: "Montserrat";
	}

	body {
		width: 100%;
		height: 100%;
		color: white;
	}

	@font-face {
		font-family: "Montserrat";
		src: url("/fonts/Montserrat-ExtraLight.ttf") format("truetype");
		font-weight: 300;
		font-style: normal;
		font-display: swap;
	}

	@font-face {
		font-family: "Montserrat";
		src: url("/fonts/Montserrat-Light.ttf") format("truetype");
		font-weight: 400;
		font-style: normal;
		font-display: swap;
	}

	@font-face {
		font-family: "Montserrat";
		src: url("/fonts/Montserrat-Medium.ttf") format("truetype");
		font-weight: 500;
		font-style: normal;
		font-display: swap;
	}

	@font-face {
		font-family: "Montserrat";
		src: url("/fonts/Montserrat-SemiBold.ttf") format("truetype");
		font-weight: 600;
		font-style: normal;
		font-display: swap;
	}

	@font-face {
		font-family: "Montserrat";
		src: url("/fonts/Montserrat-Bold.ttf") format("truetype");
		font-weight: 700;
		font-style: normal;
		font-display: swap;
	}

	:global(*)::-webkit-scrollbar-track {
		background: transparent;
	}
	:global(*)::-webkit-scrollbar {
		width: 8px;
		background: transparent;
	}
	:global(*)::-webkit-scrollbar-thumb {
		background-color: rgba(255, 255, 255, 0.25);
		border-radius: 10px;
	}
</style>
